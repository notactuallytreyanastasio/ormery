<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ormery</groupId>
  <artifactId>ormery</artifactId>
  <version>0.0.1</version>
  <name>ormery</name>
  <description>ormery</description>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>
  <dependencies>
    <dependency>
      <groupId>dev.temperlang</groupId>
      <artifactId>temper-core</artifactId>
      <version>0.6.0</version>
      <type>jar</type>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>dev.temperlang</groupId>
      <artifactId>temper-std</artifactId>
      <version>0.6.0</version>
      <type>jar</type>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter</artifactId>
      <version>5.9.2</version>
      <type>jar</type>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.sonatype.central</groupId>
        <artifactId>central-publishing-maven-plugin</artifactId>
        <version>0.8.0</version>
        <extensions>true</extensions>
        <configuration>
          <publishingServerId>central</publishingServerId>
          <autoPublish>true</autoPublish>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>3.3.0</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar-no-fork</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>3.5.0</version>
        <configuration>
          <failOnError>false</failOnError>
          <doclint>-missing</doclint>
          <docencoding>UTF-8</docencoding>
        </configuration>
        <executions>
          <execution>
            <id>attach-javadocs</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-gpg-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <id>sign-artifacts</id>
            <phase>verify</phase>
            <goals>
              <goal>sign</goal>
            </goals>
            <configuration>
              <id>${gpg.keyname}</id>
              <id>${gpg.keyname}</id>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <release>17</release>
        </configuration>
      </plugin>
      <plugin>
        <!-- https://maven.apache.org/plugins/maven-jar-plugin/ -->
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.3.0</version>
        <configuration/>
      </plugin>
      <plugin>
        <!-- https://www.mojohaus.org/exec-maven-plugin/ -->
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <id>ormery.OrmeryMain</id>
            <goals>
              <!-- Run in the Maven VM via `mvn compile exec:java@ormery.OrmeryMain` -->
              <goal>java</goal>
              <!-- Run in a forked JVM via `mvn compile exec:exec@ormery.OrmeryMain` -->
              <goal>exec</goal>
            </goals>
            <configuration>
              <!-- Used by exec:java -->
              <mainClass>ormery.OrmeryMain</mainClass>
              <!-- Used by exec:exec -->
              <executable>java</executable>
              <arguments>
                <argument>-classpath</argument>
                <argument>${project.build.outputDirectory}</argument>
                <argument>ormery.OrmeryMain</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>ormery.core.CoreMain</id>
            <goals>
              <!-- Run in the Maven VM via `mvn compile exec:java@ormery.core.CoreMain` -->
              <goal>java</goal>
              <!-- Run in a forked JVM via `mvn compile exec:exec@ormery.core.CoreMain` -->
              <goal>exec</goal>
            </goals>
            <configuration>
              <!-- Used by exec:java -->
              <mainClass>ormery.core.CoreMain</mainClass>
              <!-- Used by exec:exec -->
              <executable>java</executable>
              <arguments>
                <argument>-classpath</argument>
                <argument>${project.build.outputDirectory}</argument>
                <argument>ormery.core.CoreMain</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>ormery.html.HtmlMain</id>
            <goals>
              <!-- Run in the Maven VM via `mvn compile exec:java@ormery.html.HtmlMain` -->
              <goal>java</goal>
              <!-- Run in a forked JVM via `mvn compile exec:exec@ormery.html.HtmlMain` -->
              <goal>exec</goal>
            </goals>
            <configuration>
              <!-- Used by exec:java -->
              <mainClass>ormery.html.HtmlMain</mainClass>
              <!-- Used by exec:exec -->
              <executable>java</executable>
              <arguments>
                <argument>-classpath</argument>
                <argument>${project.build.outputDirectory}</argument>
                <argument>ormery.html.HtmlMain</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>ormery.sql.SqlMain</id>
            <goals>
              <!-- Run in the Maven VM via `mvn compile exec:java@ormery.sql.SqlMain` -->
              <goal>java</goal>
              <!-- Run in a forked JVM via `mvn compile exec:exec@ormery.sql.SqlMain` -->
              <goal>exec</goal>
            </goals>
            <configuration>
              <!-- Used by exec:java -->
              <mainClass>ormery.sql.SqlMain</mainClass>
              <!-- Used by exec:exec -->
              <executable>java</executable>
              <arguments>
                <argument>-classpath</argument>
                <argument>${project.build.outputDirectory}</argument>
                <argument>ormery.sql.SqlMain</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>ormery.url.UrlMain</id>
            <goals>
              <!-- Run in the Maven VM via `mvn compile exec:java@ormery.url.UrlMain` -->
              <goal>java</goal>
              <!-- Run in a forked JVM via `mvn compile exec:exec@ormery.url.UrlMain` -->
              <goal>exec</goal>
            </goals>
            <configuration>
              <!-- Used by exec:java -->
              <mainClass>ormery.url.UrlMain</mainClass>
              <!-- Used by exec:exec -->
              <executable>java</executable>
              <arguments>
                <argument>-classpath</argument>
                <argument>${project.build.outputDirectory}</argument>
                <argument>ormery.url.UrlMain</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>3.0.0</version>
        <configuration>
          <!-- Configuration is mostly documented in the source: https://github.com/apache/maven-surefire/blob/surefire-3.0.0/maven-surefire-plugin/src/main/java/org/apache/maven/plugin/surefire/SurefirePlugin.java -->
          <reportFormat>xml</reportFormat>
          <includes>
            <include>ormery.sql.SqlTest</include>
            <include>ormery.html.HtmlTest</include>
            <include>ormery.OrmeryTest</include>
          </includes>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>